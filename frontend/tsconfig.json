{
    "compilerOptions": {
      "target": "es5",
      "lib": ["es5", "dom"],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react",
      "baseUrl": "src",
      "paths": {
        "@pages/*": ["pages/*"],
        "@services/*": ["services/*"],
        "@types/*": ["types/*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }